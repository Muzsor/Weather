<rxui:ReactiveWindow
    x:Class="WeatherCalendar.Views.EditHolidayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rxui="http://reactiveui.net"
    xmlns:vms="clr-namespace:WeatherCalendar.ViewModels"
    Title="编辑假日"
    x:TypeArguments="vms:EditHolidayWindowViewModel"
    AllowsTransparency="True"
    Background="Transparent"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Margin="5"
        Background="{DynamicResource MaterialDesignPaper}"
        CornerRadius="3">
        <Border.Effect>
            <DropShadowEffect Opacity="0.3" ShadowDepth="0" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border
                x:Name="TitleBorder"
                Grid.Row="0"
                Background="Transparent">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="16"
                            Height="16"
                            Margin="10,0,0,0"
                            Source="../Icon.ico" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource MaterialDesignBody}"
                            Text="编辑假日" />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button
                            x:Name="CloseButton"
                            Width="30"
                            Height="30"
                            Padding="0"
                            HorizontalAlignment="Right"
                            materialDesign:ButtonAssist.CornerRadius="0,3,0,0"
                            Content="{materialDesign:PackIcon Kind=Close}"
                            Cursor="Hand"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            ToolTip="关闭" />
                    </StackPanel>
                </Grid>
            </Border>
            <Grid
                Grid.Row="1"
                Margin="10"
                TextElement.FontSize="16"
                TextElement.Foreground="{DynamicResource MaterialDesignBody}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid
                    Grid.Row="0"
                    Margin="50"
                    HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBox
                        x:Name="HolidayNameTextBox"
                        Width="220"
                        materialDesign:HintAssist.Hint="假日名称"
                        Style="{DynamicResource MaterialDesignFloatingHintTextBox}" />
                    <StackPanel
                        Grid.Row="1"
                        Margin="0,20,0,0"
                        Orientation="Horizontal">
                        <RadioButton x:Name="RestRadioButton" Content="休息" />
                        <RadioButton
                            Margin="20,0,0,0"
                            Content="上班"
                            IsChecked="True" />
                    </StackPanel>
                    <TextBlock
                        x:Name="ErrorTextBlock"
                        Grid.Row="2"
                        Margin="0,10,0,0"
                        FontSize="12"
                        Foreground="Red"
                        Text="请输入假日名称" />
                </Grid>
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        x:Name="OkButton"
                        Width="80"
                        Content="确定"
                        Foreground="{DynamicResource MaterialDesignBody}" />
                    <Button
                        x:Name="CancelButton"
                        Width="80"
                        Margin="10,0,0,0"
                        Content="取消"
                        Foreground="{DynamicResource MaterialDesignBody}" />
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</rxui:ReactiveWindow>
