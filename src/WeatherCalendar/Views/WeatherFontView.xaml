<rxui:ReactiveUserControl
    x:Class="WeatherCalendar.Views.WeatherFontView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WeatherCalendar.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rxui="http://reactiveui.net"
    xmlns:vms="clr-namespace:WeatherCalendar.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:TypeArguments="vms:WeatherFontViewModel"
    mc:Ignorable="d">
    <TextBlock
        x:Name="WeatherTextBlock"
        FontFamily="{DynamicResource WeatherFontFamily}"
        Foreground="#00DDAA"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True" />
</rxui:ReactiveUserControl>
